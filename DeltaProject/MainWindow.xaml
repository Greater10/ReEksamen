<Window x:Class="DeltaProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="400" FontSize="12"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="34"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="64"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Email" VerticalAlignment="Center"/>
            <TextBlock Text="Kodeord" Grid.Row="1" VerticalAlignment="Center"/>
            <TextBox x:Name="txtEmail" Grid.Column="1" Width="279" HorizontalAlignment="Left" Margin="5,5,0,5" Text="{Binding Code}"/>
            <TextBox x:Name="txtPassword" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="5,5,0,5" Text="{Binding City}" Width="279"/>
            <DataGrid x:Name="gridLocations" Grid.Row="2" Grid.ColumnSpan="2" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" SelectedItem="{Binding SelectedModel, Mode=TwoWay}" ItemsSource="{Binding Data}" Margin="0,10,0,33" Grid.RowSpan="2" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Lokationer" Width="280" Binding="{Binding Code}" CanUserSort="False" Foreground="Black" />
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="cmdSeek" Grid.Row="3" HorizontalAlignment="Right" Width="70" Content="Login" Command="{Binding SelectCommand}" Grid.Column="1" VerticalAlignment="Bottom" />
        </Grid>
    </DockPanel>
</Window>

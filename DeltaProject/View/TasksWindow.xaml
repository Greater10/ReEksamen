<Window x:Class="DeltaProject.View.TasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeltaProject.View"
        mc:Ignorable="d"
        Title="TasksWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Define the VisualBrush as a separate resource -->
        <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
            <VisualBrush.Visual>
                <Label Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}" 
                       Foreground="Gray" Padding="3,0,0,0" />
            </VisualBrush.Visual>
        </VisualBrush>

        <!-- Define the Style for TextBox with PlaceholderText -->
        <Style x:Key="PlaceholderTextBox" TargetType="TextBox">
            <Setter Property="Tag" Value="{Binding PlaceholderText, RelativeSource={RelativeSource Self}}" />
            <Setter Property="Background" Value="{StaticResource {x:Static SystemColors.WindowBrushKey}}" />
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="Background" Value="{DynamicResource CueBannerBrush}" />
                </Trigger>
                <Trigger Property="Text" Value="{x:Null}">
                    <Setter Property="Background" Value="{DynamicResource CueBannerBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter Row with Grid to align with DataGrid columns -->
        <DataGrid x:Name="FilterGrid" Grid.Row="0" HeadersVisibility="Column" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*" Header="Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox x:Name="NameFilter" Width="150" Margin="5" Tag="Filter by Name" Style="{StaticResource PlaceholderTextBox}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="*" Header="Age">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox x:Name="AgeFilter" Width="150" Margin="5" Tag="Filter by Age" Style="{StaticResource PlaceholderTextBox}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!-- Add more DataGridTemplateColumns as needed -->
            </DataGrid.Columns>
        </DataGrid>

        <!-- DataGrid -->
        <DataGrid x:Name="DataGrid" Grid.Row="2" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="*"/>
                <!-- Add more columns as needed -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
